<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText1"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="Wpisz nazwę miejscowości"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/searchView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FF1FDAAB"
        android:onClick="getWeather"
        android:text="Szukaj"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/voiceButton"
        app:layout_constraintTop_toBottomOf="@+id/editText1" />

    <ImageView
        android:id="@+id/voiceButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/micro"
        android:padding="8dp"
        android:layout_marginStart="8dp"
        android:contentDescription="Voice search"
        app:layout_constraintStart_toEndOf="@+id/searchView2"
        app:layout_constraintEnd_toStartOf="@+id/currentLocation"
        app:layout_constraintTop_toTopOf="@+id/searchView2"
        app:layout_constraintBottom_toBottomOf="@+id/searchView2"/>

    <ImageView
        android:id="@+id/currentLocation"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        app:srcCompat="@drawable/localization"
        app:layout_constraintStart_toEndOf="@+id/voiceButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/searchView2"
        app:layout_constraintBottom_toBottomOf="@+id/searchView2"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/weatherInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:paddingBottom="8dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView2"
        tools:visibility="visible">

        <TextView
            android:id="@+id/weatherInfoCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kraków"
            android:textAlignment="center"
            android:textColor="#333333"
            android:textSize="48sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/weatherInfoTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7.12°"
            android:textColor="#333333"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/weatherInfoCity" />

        <TextView
            android:id="@+id/weatherInfoDescr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Rozproszone chmury"
            android:textColor="#666666"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/weatherInfoTemp" />

        <TextView
            android:id="@+id/futureTempOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="7.57°"
            android:textSize="18sp"
            android:textColor="#333333"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/futureTempTwo"
            app:layout_constraintTop_toBottomOf="@+id/weatherInfoDescr" />

        <ImageView
            android:id="@+id/futureImgOne"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="4dp"
            app:srcCompat="@drawable/clouds"
            app:layout_constraintStart_toStartOf="@+id/futureTempOne"
            app:layout_constraintEnd_toEndOf="@+id/futureTempOne"
            app:layout_constraintTop_toBottomOf="@+id/futureTempOne" />

        <TextView
            android:id="@+id/futureHourOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="21:00"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/futureTempOne"
            app:layout_constraintEnd_toEndOf="@+id/futureTempOne"
            app:layout_constraintTop_toBottomOf="@+id/futureImgOne" />

        <TextView
            android:id="@+id/futureTempTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7.62°"
            android:textSize="18sp"
            android:textColor="#333333"
            app:layout_constraintStart_toEndOf="@+id/futureTempOne"
            app:layout_constraintEnd_toStartOf="@+id/futureTempThree"
            app:layout_constraintTop_toTopOf="@+id/futureTempOne" />

        <ImageView
            android:id="@+id/futureImgTwo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="4dp"
            app:srcCompat="@drawable/clouds"
            app:layout_constraintStart_toStartOf="@+id/futureTempTwo"
            app:layout_constraintEnd_toEndOf="@+id/futureTempTwo"
            app:layout_constraintTop_toBottomOf="@+id/futureTempTwo" />

        <TextView
            android:id="@+id/futureHourTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="00:00"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/futureTempTwo"
            app:layout_constraintEnd_toEndOf="@+id/futureTempTwo"
            app:layout_constraintTop_toBottomOf="@+id/futureImgTwo" />

        <TextView
            android:id="@+id/futureTempThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6.99°"
            android:textSize="18sp"
            android:textColor="#333333"
            app:layout_constraintStart_toEndOf="@+id/futureTempTwo"
            app:layout_constraintEnd_toStartOf="@+id/futureTempFour"
            app:layout_constraintTop_toTopOf="@+id/futureTempOne" />

        <ImageView
            android:id="@+id/futureImgThree"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="4dp"
            app:srcCompat="@drawable/clouds"
            app:layout_constraintStart_toStartOf="@+id/futureTempThree"
            app:layout_constraintEnd_toEndOf="@+id/futureTempThree"
            app:layout_constraintTop_toBottomOf="@+id/futureTempThree" />

        <TextView
            android:id="@+id/futureHourThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="03:00"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/futureTempThree"
            app:layout_constraintEnd_toEndOf="@+id/futureTempThree"
            app:layout_constraintTop_toBottomOf="@+id/futureImgThree" />

        <TextView
            android:id="@+id/futureTempFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6.43°"
            android:textSize="18sp"
            android:textColor="#333333"
            app:layout_constraintStart_toEndOf="@+id/futureTempThree"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/futureTempOne" />

        <ImageView
            android:id="@+id/futureImgFour"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="4dp"
            app:srcCompat="@drawable/clouds"
            app:layout_constraintStart_toStartOf="@+id/futureTempFour"
            app:layout_constraintEnd_toEndOf="@+id/futureTempFour"
            app:layout_constraintTop_toBottomOf="@+id/futureTempFour" />

        <TextView
            android:id="@+id/futureHourFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="06:00"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/futureTempFour"
            app:layout_constraintEnd_toEndOf="@+id/futureTempFour"
            app:layout_constraintTop_toBottomOf="@+id/futureImgFour" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/weatherInfoDetails"
        android:layout_width="0dp"
        android:layout_height="168dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/border"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/weatherInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible">

        <TextView android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="62dp" android:layout_marginTop="13dp" android:alpha="0.8" android:text="Ciśnienie" android:textColor="#FFFFFF" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" />
        <TextView android:id="@+id/textView4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="13dp" android:layout_marginEnd="62dp" android:alpha="0.8" android:text="Odczuwalnie" android:textColor="#FFFFFF" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent" />
        <TextView android:id="@+id/textView3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="52dp" android:alpha="0.8" android:text="Prędkość wiatru" android:textColor="#FFFFFF" app:layout_constraintBottom_toTopOf="@+id/weatherInfoWindSpeed" app:layout_constraintEnd_toEndOf="parent" />
        <TextView android:id="@+id/textView5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="56dp" android:alpha="0.8" android:text="Wilgotność" android:textColor="#FFFFFF" app:layout_constraintBottom_toTopOf="@+id/weatherInfoHumidity" app:layout_constraintStart_toStartOf="parent" />
        <TextView android:id="@+id/weatherInfoPressure" android:layout_width="154dp" android:layout_height="49dp" android:layout_marginStart="20dp" android:layout_marginTop="32dp" android:text="Pressure" android:textAlignment="center" android:textColor="#FFFFFF" android:textSize="24sp" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" />
        <TextView android:id="@+id/weatherInfoFeelsLike" android:layout_width="117dp" android:layout_height="50dp" android:layout_marginTop="35dp" android:layout_marginEnd="38dp" android:text="feels_like" android:textAlignment="center" android:textColor="#FFFFFF" android:textSize="24sp" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent" />
        <TextView android:id="@+id/weatherInfoHumidity" android:layout_width="136dp" android:layout_height="38dp" android:layout_marginStart="24dp" android:layout_marginBottom="16dp" android:text="Humidity" android:textAlignment="center" android:textColor="#FFFFFF" android:textSize="24sp" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent" />
        <TextView android:id="@+id/weatherInfoWindSpeed" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="52dp" android:layout_marginBottom="16dp" android:text="WindSpeed" android:textAlignment="center" android:textColor="#FFFFFF" android:textSize="24sp" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnLongTermForecast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="#FF1FDAAB"
        android:paddingHorizontal="32dp"
        android:text="Sprawdź na 16 dni"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/weatherInfoDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/attributionFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp"

        android:translationX="18dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dane pogodowe dostarcza"
            android:textSize="10sp"
            android:textColor="#888888"
            />

        <ImageView
            android:id="@+id/logoOpenWeather"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:adjustViewBounds="true"

            android:layout_marginStart="-25dp"

            android:src="@drawable/openweather_logo"
            android:contentDescription="OpenWeatherMap Logo"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/longTermForecast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>